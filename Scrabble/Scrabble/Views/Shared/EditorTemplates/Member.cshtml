@model Scrabble.Models.MemberViewModel

<fieldset>
	<div class="form-group">
		@Html.LabelFor(x => x.FirstName, "First Name *")
		@Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.LastName, "Last Name *")
		@Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.TelephoneNumber, "Telephone Number *")
		@Html.TextBoxFor(x => x.TelephoneNumber, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.EmailAddress, "Email Address *")
		@Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Address1, "Address 1 *")
		@Html.TextBoxFor(x => x.Address1, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Address2, "Address 2")
		@Html.TextBoxFor(x => x.Address2, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.City, "City *")
		@Html.TextBoxFor(x => x.City, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Region, "Region")
		@Html.TextBoxFor(x => x.Region, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.PostCode, "Post Code *")
		@Html.TextBoxFor(x => x.PostCode, new { @class = "form-control" })
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>

</fieldset>